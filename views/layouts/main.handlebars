	</div>
	</div>

	<!-- Modal 2 Structure CREATE -->
	<div id="modal2" class="modal">
		<div class="modal-content">
			<h2>Become a Doer</h2>
			<div class="row">
				<form class="col s12">
					<div class="row">
						<div class="input-field col s6">
							<i class="material-icons prefix">account_circle</i>
							<input id="new-name" type="text" class="validate">
							<label for="new-name">Name</label>
						</div>
						<div class="input-field col s6">
							<i class="material-icons prefix">phone</i>
							<input id="new-contact" type="tel" class="validate">
							<label for="new-contact">Telephone</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s6">
							<i class="material-icons prefix">email</i>
							{{!-- <label for="new-email">Email</label> --}}
							<input id="new-email" type="email" class="validate">
							<label for="new-email">Email</label>
						</div>
						<div class="input-field col s6">
							<i class="material-icons prefix">lock</i>
							{{!-- <label for="new-password">Password</label> --}}
							<input id="new-password" type="password" class="validate">
							<label for="new-password">Password</label>
						</div>
					</div>
				</form>
			</div>
		</div>
		<div class="modal-footer">
			<button id="sign-up" class="modal-close waves-effect waves-green btn-flat">Create your account</button>
		</div>
	</div>

	<div class="parallax-container">
		<div class="parallax">
			<img src="assets/images/green.jpg" alt="background" />
		</div>
		<div class="iris">
			<div class="card transparent z-depth-5">
				<div class="search">
					<h1>Find a Doer</h1>
					<input class="searchbar #ffffff white" type="text" placeholder="  What do you need done?">
					<button id="search-tasks" class="btn waves-effect waves-light btn-medium #4caf50 green modal-trigger" type="submit" name="action" href="#modal3">
