	<!-- Modal Structure LOGIN/SIGNUP -->
	<div id="modal1" class="modal">
		<div class="modal-content">
			<h2>Log in</h2>
			<form class="col s12">
				<div class="row">
					<div class="input-field col s6">
						<i class="material-icons prefix">email</i>
						{{!-- <label for="email-login">Email</label> --}}
						<input id="email-login" type="email" class="validate">
						<label for="email-login">Email</label>
					</div>
					<div class="input-field col s6">
						<i class="material-icons prefix">lock</i>
						{{!-- <label for="password-login">Password</label> --}}
						<input id="password-login" type="password" class="validate">
						<label for="password-login">Password</label>
					</div>
			</form>
		</div>
		<h5>If you don't already have an account, create an account <a class="waves-effect waves-light #33691e light-green darken-4 btn modal-trigger"
			 href="#modal2">here.</a>
		</h5>
	</div>
